#!/bin/bash

# Extract data using required commands: jq, awk, sed
name=$(jq -r '.name' data.json)
height=$(jq -r '.height' data.json)
weight=$(jq -r '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json)

# Use awk for calculations and sed for formatting
formatted_height=$(echo "$height" | awk '{printf "%.1f", $1/10}')
formatted_weight=$(echo "$weight" | awk '{printf "%.1f", $1/10}')

# Capitalize first letter of name and type
capitalized_name=$(echo "$name" | sed 's/.*/\u&/')
capitalized_type=$(echo "$type" | sed 's/.*/\u&/')

echo "${capitalized_name} is of type ${capitalized_type}, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
